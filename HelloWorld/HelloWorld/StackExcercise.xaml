<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.StackExcercise"
             BackgroundColor="#127ac7"
             Padding="0,20,0,0">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
			Android="20, 30, 20, 20">
        </OnPlatform>
    </ContentPage.Padding>
    
    <StackLayout VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin" 
           HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
           FontSize="25"
           FontAttributes="Bold"/>
        <Label Text="Cross-platform apps made easy..." 
           HorizontalOptions="Center"
           HorizontalTextAlignment="Center"
           FontSize="14"
           FontAttributes="Bold"/>
        <Button x:Name="login" BackgroundColor="#1dabf0" Text="Login" Clicked="Handle_Login_Clicked" />
        <Button x:Name="register" BackgroundColor="#1dabf0" Text="Register" Clicked="Handle_Register_Clicked"/>
    </StackLayout>
</ContentPage>